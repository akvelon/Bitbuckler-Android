<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/unTrackButtonBackground" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/greenMergePR" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/trackButtonBackground" />
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/secondaryBackground" />
        </shape>
    </item>
</selector>